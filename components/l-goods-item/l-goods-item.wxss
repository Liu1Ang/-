/* components/l-goods-item/l-goods-item.wxss */
.goods-item{
  text-align: center;
  color: #333;
  padding-bottom: 85rpx;
}
.goods-item .img{
  width: 98%;
  border-radius: 10rpx;
  margin: 0 auto;
}
.goods-item .desc-info{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx
}
.goods-item .desc-info .title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx
}
.info{
  font-size: 26rpx;
  margin-top: 10rpx;
 display: flex
}
.info > view{
  flex: 1;
}
.info .icon{
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top: 6rpx;
  right: 20rpx
}
.info .price{
  flex: 1;
  color: #ff5777;
}

.cfav{
  position: relative;
  right: 20rpx;
}
